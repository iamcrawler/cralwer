            </column>
            <column name="sys_value_id" type="bigint" remarks="值列表大类id"/>
            <column name="code" type="varchar(30)" remarks="值列表小类code"/>
            <column name="name" type="varchar(30)" remarks="值列表小类name"></column>
        </createTable>
    </changeSet>
